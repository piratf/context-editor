{
  "name": "context-editor",
  "displayName": "Context Editor",
  "description": "Dedicated visual editor for Claude Code. Orchestrate nested CLAUDE.md trees, MCP servers, and global project settings in a unified VS Code sidebar.",
  "version": "0.1.0",
  "publisher": "piratf",
  "license": "MPL-2.0",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "keywords": [
    "ai",
    "agent",
    "context",
    "configuration",
    "developer-tools",
    "llm",
    "productivity",
    "project-management",
    "settings",
    "skill"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "contextEditor.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "contextEditor.switchEnvironment",
        "title": "Switch Environment",
        "icon": "$(server-environment)",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.titleEnvironmentSwitch",
        "title": "Switch Environment",
        "icon": "$(server-environment)",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.showDebugOutput",
        "title": "Show Debug Output",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.copyNames",
        "title": "Copy Names",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.copyPaths",
        "title": "Copy Paths",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.batchDelete",
        "title": "Delete",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.batchCopy",
        "title": "Copy",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.batchCut",
        "title": "Cut",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.paste",
        "title": "Paste",
        "category": "Context Editor"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "contextEditorContainer",
          "title": "Context Editor",
          "icon": "resources/activity-bar-icon.svg"
        }
      ]
    },
    "views": {
      "contextEditorContainer": [
        {
          "id": "contextEditorUnified",
          "name": "Context",
          "title": "Context",
          "canSelectMany": true
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "contextEditor.refresh",
          "when": "view == contextEditorUnified",
          "group": "navigation@1"
        },
        {
          "command": "contextEditor.titleEnvironmentSwitch",
          "when": "view == contextEditorUnified",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "contextEditor.copyNames",
          "when": "view == contextEditorUnified",
          "group": "copy@1"
        },
        {
          "command": "contextEditor.copyPaths",
          "when": "view == contextEditorUnified",
          "group": "copy@2"
        },
        {
          "command": "contextEditor.batchCopy",
          "when": "view == contextEditorUnified",
          "group": "clipboard@1"
        },
        {
          "command": "contextEditor.batchCut",
          "when": "view == contextEditorUnified",
          "group": "clipboard@2"
        },
        {
          "command": "contextEditor.paste",
          "when": "view == contextEditorUnified && viewItem =~ /^(directory|claudeDirectory|project)$/",
          "group": "clipboard@3"
        },
        {
          "command": "contextEditor.batchDelete",
          "when": "view == contextEditorUnified",
          "group": "delete@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && rm -rf out/resources && cp -r resources out/",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "node ./out/test/runTest.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.5",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vscode/test-electron": "^2.4.1",
    "c8": "^10.1.3",
    "eslint": "^9.17.0",
    "eslint-plugin-node": "^5.2.1",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "prettier": "^3.8.1",
    "sinon": "^21.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/piratf/context-editor"
  },
  "bugs": {
    "url": "https://github.com/piratf/context-editor/issues"
  },
  "homepage": "https://github.com/piratf/context-editor#readme",
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
