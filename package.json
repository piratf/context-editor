{
  "name": "context-editor",
  "displayName": "Context Editor",
  "description": "Dedicated visual editor for Claude Code. Orchestrate nested CLAUDE.md trees, MCP servers, and global project settings in a unified VS Code sidebar.",
  "version": "0.1.2",
  "publisher": "piratf",
  "license": "MPL-2.0",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "keywords": [
    "ai",
    "agent",
    "context",
    "configuration",
    "developer-tools",
    "llm",
    "productivity",
    "project-management",
    "settings",
    "skill"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Context Editor",
      "properties": {
        "contextEditor.export.directory": {
          "type": "string",
          "default": "",
          "markdownDescription": "导出配置的目标目录路径。支持 **Unix** (`/home/user/export`)、**Windows** (`C:\\Users\\user\\export`) 和 **UNC** (`\\\\server\\share`) 格式的绝对路径。",
          "pattern": "^(|[/\\\\].*|[A-Za-z]:\\\\.*|\\\\\\\\[^\\\\]+\\\\.*)$",
          "patternErrorMessage": "必须是绝对路径（Unix: /path/to/dir, Windows: C:\\path\\to\\dir 或 \\\\server\\share）或为空"
        },
        "contextEditor.export.filters": {
          "type": "array",
          "default": [],
          "description": "导出时过滤文件的正则表达式模式（空数组表示全部导出）",
          "items": {
            "type": "string",
            "description": "正则表达式模式"
          }
        },
        "contextEditor.export.createGitignore": {
          "type": "boolean",
          "default": true,
          "description": "导出时自动创建 .gitignore 文件（排除 .settings.local.yaml）"
        }
      }
    },
    "commands": [
      {
        "command": "contextEditor.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "contextEditor.switchEnvironment",
        "title": "Switch Environment",
        "icon": "$(server-environment)",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.titleEnvironmentSwitch",
        "title": "Switch Environment",
        "icon": "$(server-environment)",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.showDebugOutput",
        "title": "Show Debug Output",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.copyName",
        "title": "Copy Name",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.copyPath",
        "title": "Copy Path",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.delete",
        "title": "Delete",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.openVscode",
        "title": "Open in New Window",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.createFile",
        "title": "Create File",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.createFolder",
        "title": "Create Folder",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.exportConfig",
        "title": "导出配置",
        "icon": "$(export)",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.importConfig",
        "title": "导入配置",
        "icon": "$(download)",
        "category": "Context Editor"
      },
      {
        "command": "contextEditor.selectExportDirectory",
        "title": "选择导出目录",
        "category": "Context Editor"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "contextEditorContainer",
          "title": "Context Editor",
          "icon": "resources/activity-bar-icon.svg"
        }
      ]
    },
    "views": {
      "contextEditorContainer": [
        {
          "id": "contextEditorUnified",
          "name": "Context",
          "title": "Context"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "contextEditor.refresh",
          "when": "view == contextEditorUnified",
          "group": "navigation@1"
        },
        {
          "command": "contextEditor.titleEnvironmentSwitch",
          "when": "view == contextEditorUnified",
          "group": "navigation@2"
        },
        {
          "command": "contextEditor.exportConfig",
          "when": "view == contextEditorUnified",
          "group": "navigation@3"
        },
        {
          "command": "contextEditor.importConfig",
          "when": "view == contextEditorUnified",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "contextEditor.copyName",
          "when": "view == contextEditorUnified && viewItem =~ /(^| )hasNameToCopy($| )/",
          "group": "1_copy@1"
        },
        {
          "command": "contextEditor.copyPath",
          "when": "view == contextEditorUnified && viewItem =~ /(^| )hasCopyablePath($| )/",
          "group": "1_copy@2"
        },
        {
          "command": "contextEditor.openVscode",
          "when": "view == contextEditorUnified && viewItem =~ /(^| )canOpenInVscode($| )/",
          "group": "2_open@1"
        },
        {
          "command": "contextEditor.createFile",
          "when": "view == contextEditorUnified && viewItem =~ /(^| )canCreateFile($| )/",
          "group": "3_create@1"
        },
        {
          "command": "contextEditor.createFolder",
          "when": "view == contextEditorUnified && viewItem =~ /(^| )canCreateFolder($| )/",
          "group": "3_create@2"
        },
        {
          "command": "contextEditor.delete",
          "when": "view == contextEditorUnified && viewItem =~ /(^| )canDelete($| )/",
          "group": "4_delete@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "rm -rf out/ && tsc -p ./ && cp -r resources out/",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "node --test out/test/unit/**/*.test.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.5",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vscode/test-electron": "^2.4.1",
    "c8": "^10.1.3",
    "eslint": "^9.17.0",
    "eslint-plugin-node": "^5.2.1",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "prettier": "^3.8.1",
    "sinon": "^21.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/piratf/context-editor"
  },
  "bugs": {
    "url": "https://github.com/piratf/context-editor/issues"
  },
  "homepage": "https://github.com/piratf/context-editor#readme",
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
